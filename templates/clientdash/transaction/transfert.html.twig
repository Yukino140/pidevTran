{% extends 'clientdash/index.html.twig' %}
{% block body %}
    <main id="main" class="main">

<div class="container" >
        {% for message in app.flashes('failed') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <h1>Transfert Money To Another Account</h1>
        <div class="row">
            <div class="col-md-6">
                {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                {{ form_label(form.montant) }}
                {{ form_widget(form.montant, {'attr': {'class': 'form-control'}}) }}
                <div class="alert alert-danger">
                {{ form_errors(form.montant) }}</div>
                 {{ form_label(form.compteRecus) }}
                {{ form_widget(form.compteRecus, {'attr': {'class': 'form-control'}}) }}
                <div class="alert alert-danger">{{ form_errors(form.compteRecus) }}</div>

                <span class="bg bg-warning">The Current Account balance is <strong>{{ cl.solde }}TND</strong></span>
                <br/>
                <br/>
                <button type="submit" class="btn btn-primary">Transfert</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    </main>
{% endblock %}